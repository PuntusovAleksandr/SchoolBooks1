<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_custom_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/cardview_default_radius"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <!--<TextView-->
            <!--android:id="@+id/tv_title_context_share"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/cardview_default_elevation"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="Вы хотите поделится этой программой у Вас на стрничке?"-->
            <!--android:textSize="22sp" />-->

        <!--<View-->
            <!--android:id="@+id/con_view_share"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/cardview_default_elevation"-->
            <!--android:layout_below="@+id/tv_title_context_share"-->
            <!--android:layout_marginBottom="@dimen/activity_vertical_margin"-->
            <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->
            <!--android:background="@color/colorPrimaryDark" />-->

        <LinearLayout
            android:id="@+id/ll_context_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/com_facebook_likeboxcountview_caret_width"
                android:layout_marginRight="@dimen/com_facebook_likeboxcountview_caret_width"
                android:src="@mipmap/book_launcher" />

            <TextView
                android:id="@+id/tv_context_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:scaleType="center"
                android:text="Данная программа разработана для использования в средне-образовательных школах в качестве электронной книги."
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:id="@+id/con_view_share2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_default_elevation"
            android:layout_below="@+id/ll_context_share"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/ll_group_buttons_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/con_view_share2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_share_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@color/colorAccentTransparent"
                android:text="Нет" />

            <Button
                android:id="@+id/bt_share_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@color/colorAccentTransparent"
                android:text="Да" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>